{
   "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "Node",

      "rootDir": "src",
      "outDir": "dist",

      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,

      "baseUrl": ".",
      "paths": {
         "@/*": ["src/*"]
      },

      "types": ["node"]
   },
   "include": ["src"],
   "ts-node": {
      "files": true
   }
}
